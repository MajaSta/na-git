#include <stdlib.h>
#include <limits.h>

static unsigned int	ft_number_size(int number)
{
	unsigned int	length;

	length = 0;
	if (number == 0)
		return (1);
	if (number < 0)
		length += 1;
	while (number != 0)
	{
		number /= 10;
		length++;
	}
	return (length);
}

char	*ft_itoa(int n)
{
	char			*string;
	unsigned int	number;
	unsigned int	length;
	unsigned int	is_negative;

	length = ft_number_size(n);
	string = (char *)malloc(sizeof(char) * (length + 1));
	if (string == NULL)
		return (NULL);
	is_negative = (n < 0);
	if (is_negative)
		number = -((unsigned int)n);
	else
		number = n;
	string[length] = '\0';
	if (number == 0)
		string[0] = '0';
	while (number != 0)
	{
		string[--length] = (number % 10) + '0';
		number = number / 10;
	}
	if (is_negative)
		string[0] = '-';
	return (string);
}
